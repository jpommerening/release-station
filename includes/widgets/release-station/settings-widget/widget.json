{
   "name": "settings-widget",
   "description": "",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "required": [ "user" ],
      "properties": {
         "settings": {
            "type": "object",
            "description": "",
            "properties": {
               "events": {
                  "type": "object",
                  "properties": {
                     "resource": {
                        "type": "string",
                        "description": "The name of the resource under which to publish selected event sources.",
                        "format": "topic"
                     }
                  }
               },
               "data": {
                  "type": "object",
                  "properties": {
                     "resource": {
                        "type": "string",
                        "description": "The name of the resource under which to publish selected repository data.",
                        "format": "topic"
                     }
                  }
               }
            }
         },
         "user": {
            "type": "object",
            "description": "User information",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "description": "The name of the resource to subscribe to for user information.",
                  "format": "topic"
               }
            }
         }
      }
   }
}
