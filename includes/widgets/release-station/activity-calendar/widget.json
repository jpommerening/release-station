{
   "name": "ActivityCalendar",
   "description": "Display project activity in a calendar view",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
         "calendar": {
            "type": "object",
            "description": "",
            "properties": {
               "parameter": {
                  "type": "string",
                  "description": "The place parameter to use for selecting dates",
                  "format": "topic",
                  "default": "date"
               }
            }
         }
      }
   }
}
