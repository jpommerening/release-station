{
   "name": "ActivityGridWidget",
   "description": "Display repository activity for multiple projects in a grid",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
         "gauge": {
            "type": "object",
            "description": "Display properties of the gauges",
            "properties": {
               "interval": {
                  "type": "number",
                  "description": "Slide interval in milliseconds",
                  "default": 4500
               },
               "colors": {
                  "type": [ "string", "array" ],
                  "description": "One or more color stops to smoothly transition between, when changing value.",
                  "default": [ "blue", "green", "orange" ],
                  "items": { "type": "string" }
               }
            }
         },
         "events": {
            "type": "object",
            "description": "Which events to display in the grid.",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "description": "The name of the events resource to pull events from",
                  "format": "topic",
                  "default": "events"
               },
               "types": {
                  "type": "array",
                  "description": "The types of events that should be listed (all other events will be ignored)",
                  "items": {
                     "type": "string"
                  },
                  "default": []
               }
            }
         }
      }
   }
}
