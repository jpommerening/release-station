{
   "name": "release-history-widget",
   "description": "Display releases",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "controls": [
      "laxar-color-scale-control"
   ],

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
         "repos": {
            "type": "object",
            "description": "Which projects to display.",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "description": "",
                  "format": "topic"
               }
            }
         },
         "tags": {
            "type": "object",
            "description": "",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "description": "",
                  "format": "topic"
               }
            }
         },
         "semver": {
            "type": "object"
         }
      }
   }
}
