{
   "name": "details-widget",
   "description": "Just a list of links",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
         "details": {
            "type": "object",
            "required": [ "resource" ],
            "description": "",
            "properties": {
               "resource": {
                  "type": "string",
                  "description": "The name of the resource providing details.",
                  "format": "topic"
               }
            }
         }
      }
   }
}
