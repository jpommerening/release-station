{
   "name": "NavigationWidget",
   "description": "Just a list of links",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
         "navigation": {
            "type": "object",
            "description": "",
            "properties": {
               "items": {
                  "type": "array",
                  "items": {
                     "type": "object",
                     "properties": {
                        "place": {
                           "type": "string"
                        },
                        "title": {
                           "type": "string"
                        },
                        "icon": {
                           "type": "string"
                        }
                     }
                  }
               }
            }
         }
      }
   }
}
