{
   "layout": "application",
   "extends": "auth_base",

   "areas": {
      "activities": [
         {
            "widget": "release-station/github-events-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "events": {
                  "resource": "events",
                  "onActions": [ "provide-stream" ],
                  "sources": {
                     "resource": "eventSources"
                  }
               }
            }
         },
         {
            "widget": "release-station/github-data-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "data": {
                  "resource": "data",
                  "onActions": [ "provide-resource" ],
                  "sources": {
                     "resource": "dataSources"
                  }
               }
            }
         }
      ],

      "popups": [
         {
            "widget": "laxarjs/ax-popup-widget",
            "id": "details",
            "features": {
               "content": {
                  "layout": "popup"
               },
               "open": {
                  "onActions": [ "openDetails" ]
               },
               "close": {
                  "onActions": [ "closeDetails" ]
               },
               "closeIcon": {
                  "enabled": true
               }
            }
         }
      ],

      "details.header": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "level": 3,
                  "i18nHtmlText": {
                     "en-US": "Details"
                  }
               }
            }
         }
      ],

      "details.content": [
         {
            "widget": "release-station/details-widget",
            "features": {
               "details": {
                  "resource": "details"
               }
            }
         }
      ],


      "header": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "i18nHtmlText": {
                     "en-US": "Release<span>Station</span>"
                  }
               },
               "intro": {
                  "i18nHtmlText": {
                     "en-US": "for GitHub"
                  }
               }
            }
         }
      ],

      "navigation": [
      ],

      "headline": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "level": 2,
                  "i18nHtmlText": {
                     "en-US": "Activity Calendar"
                  }
               }
            }
         }
      ],

      "content1a": [
      ],

      "content1b": [
         {
            "widget": "release-station/activity-calendar-widget",
            "features": {
               "calendar": {
               },
               "repos": {
                  "resource": "repos"
               },
               "events": {
                  "resource": "events"
               },
               "details": {
                  "resource": "details",
                  "action": "openDetails"
               }
            }
         }
      ],

      "footer": [
      ]
   }
}
