{
   "layout": "application",
   "extends": "auth_base",

   "areas": {
      "activities": [
         {
            "widget": "amd:laxar-github/events-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "events": {
                  "resource": "events",
                  "sources": {
                     "resource": "eventSources"
                  }
               }
            }
         },
         {
            "widget": "amd:laxar-github/data-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "data": {
                  "resource": "data",
                  "sources": {
                     "resource": "dataSources"
                  }
               }
            }
         }
      ],

      "popups": [
         {
            "widget": "amd:laxar-popup-widget",
            "id": "details",
            "features": {
               "content": {
                  "layout": "popup"
               },
               "open": {
                  "onActions": [ "openDetails" ]
               },
               "close": {
                  "onActions": [ "closeDetails" ]
               },
               "closeIcon": {
                  "enabled": true
               }
            }
         }
      ],

      "details.header": [
         {
            "widget": "amd:laxar-headline-widget",
            "features": {
               "headline": {
                  "level": 3,
                  "i18nHtmlText": {
                     "en-US": "Details"
                  }
               }
            }
         }
      ],

      "details.content": [
         {
            "widget": "release-station/details-widget",
            "features": {
               "details": {
                  "resource": "details"
               }
            }
         }
      ],


      "header": [
         {
            "widget": "amd:laxar-headline-widget",
            "features": {
               "headline": {
                  "i18nHtmlText": {
                     "en-US": "Release<span>Station</span>"
                  }
               },
               "intro": {
                  "i18nHtmlText": {
                     "en-US": "for GitHub"
                  }
               }
            }
         }
      ],

      "navigation": [
         {
            "widget": "release-station/search-box-widget",
            "insertBeforeId": "login",
            "features": {
               "search": {
                  "resource": "searchString"
               }
            }
         }
      ],

      "headline": [
         {
            "widget": "amd:laxar-headline-widget",
            "features": {
               "headline": {
                  "level": 2,
                  "i18nHtmlText": {
                     "en-US": "Activity Calendar"
                  }
               }
            }
         }
      ],

      "content": [
         {
            "widget": "release-station/activity-calendar-widget",
            "features": {
               "calendar": {
               },
               "repos": {
                  "resource": "data"
               },
               "events": {
                  "resource": "events"
               },
               "search": {
                  "resource": "searchString",
                  "fields": [
                     "repo.name",
                     "actor.login",
                     "org.login",
                     "payload.message",
                     "payload.ref"
                  ],
                  "match": {
                     "@([\\w-]+)": [ "actor.login" ],
                     "#(\\d+)": [ "payload.issue.id" ],
                     "([\\w-]+/[\\w.-]+)": [ "repo.name" ]
                  }
               },
               "details": {
                  "resource": "details",
                  "action": "openDetails"
               }
            }
         }
      ],

      "footer": [
      ]
   }
}
