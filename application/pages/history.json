{
   "layout": "application",
   "extends": "auth_base",

   "areas": {
      "activities": [
         {
            "widget": "amd:laxar-github/data-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "data": {
                  "resource": "tags",
                  "sources": {
                     "resource": "repos",
                     "follow": "tags_url"
                  }
               }
            }
         },
         {
            "widget": "amd:laxar-github/log-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "log": {
                  "resource": "log",
                  "sources": {
                     "resource": "tags",
                     "follow": "commit.url"
                  }
               }
            }
         }
      ],

      "header": [
         {
            "widget": "amd:laxar-headline-widget",
            "features": {
               "headline": {
                  "i18nHtmlText": {
                     "en-US": "Release<span>Station</span>"
                  }
               },
               "intro": {
                  "i18nHtmlText": {
                     "en-US": "for GitHub"
                  }
               }
            }
         }
      ],

      "headline": [
         {
            "widget": "amd:laxar-headline-widget",
            "features": {
               "headline": {
                  "level": 2,
                  "i18nHtmlText": {
                     "en-US": "Release History"
                  }
               }
            }
         }
      ],

      "content": [
         {
            "widget": "release-station/release-history-widget",
            "features": {
               "repos": {
                  "resource": "repos"
               },
               "tags": {
                  "resource": "tags"
               },
               "log": {
                  "resource": "log"
               }
            }
         }
      ],

      "footer": [
      ]
   }
}
