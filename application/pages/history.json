{
   "layout": "application",
   "extends": "auth_base",

   "areas": {
      "activities": [
         {
            "widget": "release-station/github-data-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "data": {
                  "resource": "data",
                  "onActions": [ "provide-resource" ],
                  "sources": {
                     "resource": "dataSources"
                  }
               }
            }
         }
      ],

      "header": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "i18nHtmlText": {
                     "en-US": "Release<span>Station</span>"
                  }
               },
               "intro": {
                  "i18nHtmlText": {
                     "en-US": "for GitHub"
                  }
               }
            }
         }
      ],

      "headline": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "level": 2,
                  "i18nHtmlText": {
                     "en-US": "Release History"
                  }
               }
            }
         }
      ],

      "content": [
         {
            "widget": "release-station/release-history-widget",
            "features": {
            }
         }
      ],

      "footer": [
      ]
   }
}
