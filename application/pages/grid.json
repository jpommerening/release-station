{
   "layout": "application",
   "extends": "auth_base",

   "areas": {
      "activities": [
         {
            "widget": "release-station/github-events-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "events": {
                  "resource": "events",
                  "sources": {
                     "resource": "event-sources"
                  }
               }
            }
         },
         {
            "widget": "release-station/github-data-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               }
            }
         }
      ],

      "header": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "i18nHtmlText": {
                     "en_US": "Release<span>Station</span>"
                  }
               },
               "intro": {
                  "i18nHtmlText": {
                     "en_US": "for GitHub"
                  }
               }
            }
         }
      ],

      "headline": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "level": 2,
                  "i18nHtmlText": {
                     "en_US": "Activity Overview"
                  }
               },
               "intro": {
                  "i18nHtmlText": {
                     "en_US": "last 30 days"
                  }
               }
            }
         }
      ],

      "content1a": [
         {
            "widget": "release-station/activity-grid-widget",
            "features": {
               "events": {
                  "resource": "events"
               }
            }
         }
      ],

      "footer": [
      ]
   }
}
