{
   "layout": "application",
   "extends": "auth_base",

   "areas": {
      "activities": [
         {
            "widget": "amd:laxar-github/events-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "events": {
                  "resource": "events",
                  "sources": {
                     "resource": "repos"
                  }
               }
            }
         }
      ],

      "header": [
         {
            "widget": "amd:laxar-headline-widget",
            "features": {
               "headline": {
                  "i18nHtmlText": {
                     "en-US": "Release<span>Station</span>"
                  }
               },
               "intro": {
                  "i18nHtmlText": {
                     "en-US": "for GitHub"
                  }
               }
            }
         }
      ],

      "navigation": [
         {
            "widget": "release-station/search-box-widget",
            "insertBeforeId": "login",
            "features": {
               "search": {
                  "resource": "searchString"
               }
            }
         }
      ],

      "headline": [
         {
            "widget": "release-station/headline-selector-widget",
            "features": {
               "headline": {
                  "level": 1,
                  "i18nHtmlFormat": {
                     "en-US": "Activity for [0]"
                  }
               },

               "selections": [
                  {
                     "parameter": "scope",
                     "options": {
                        "parameterFormat": "[value]",
                        "i18nHtmlFormat": "[text]",
                        "init": [
                           { "value": "3 months", "text": "last 3 months" },
                           { "value": "1 month", "text": "last month" },
                           { "value": "1 week", "text": "last week" }
                        ]
                     }
                  }
               ]
            }
         }
      ],

      "content": [
         {
            "widget": "release-station/activity-grid-widget",
            "features": {
               "scope": {
                  "parameter": "scope"
               },
               "events": {
                  "resource": "events"
               },
               "repos": {
                  "resource": "repos"
               },
               "search": {
                  "resource": "searchString",
                  "fields": [
                     "repo.name",
                     "actor.login",
                     "org.login"
                  ],
                  "match": {
                     "@([\\w-]+)": [ "actor.login" ],
                     "([\\w-]+/[\\w.-]+)": [ "repo.name" ]
                  }
               }
            }
         }
      ],

      "footer": [
      ]
   }
}
