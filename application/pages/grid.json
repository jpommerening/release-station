{
   "layout": "application",
   "extends": "auth_base",

   "areas": {
      "activities": [
         {
            "widget": "release-station/github-events-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "events": {
                  "resource": "events",
                  "sources": [
                     {
                        "type": "http",
                        "url": "https://api.github.com/orgs/LaxarJS/events",
                        "events": [ "push", "issues", "release", "create", "repository" ]
                     },
                     {
                        "type": "http",
                        "url": "https://api.github.com/repos/LaxarJS/laxar/events",
                        "events": [ "push", "issues", "release", "create" ]
                     },
                     {
                        "type": "socket.io",
                        "url": "https://github-live-events.herokuapp.com/repos/LaxarJS/laxar/events",
                        "events": [ "push", "issues", "release", "create" ]
                     },
                     {
                        "type": "http",
                        "url": "https://api.github.com/repos/LaxarJS/laxar-uikit/events",
                        "events": [ "push", "issues", "release", "create" ]
                     },
                     {
                        "type": "socket.io",
                        "url": "https://github-live-events.herokuapp.com/repos/LaxarJS/laxar-uikit/events",
                        "events": [ "push", "issues", "release", "create" ]
                     },
                     {
                        "type": "http",
                        "url": "https://api.github.com/repos/LaxarJS/laxar-patterns/events",
                        "events": [ "push", "issues", "release", "create" ]
                     },
                     {
                        "type": "socket.io",
                        "url": "https://github-live-events.herokuapp.com/repos/LaxarJS/laxar-patterns/events",
                        "events": [ "push", "issues", "release", "create" ]
                     }
                  ]
               }
            }
         },
         {
            "widget": "release-station/github-data-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               }
            }
         }
      ],

      "header": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "i18nHtmlText": {
                     "en_US": "Release<span>Station</span>"
                  }
               }
            }
         }
      ],

      "headline": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "level": 2,
                  "i18nHtmlText": {
                     "en_US": "Activity Overview"
                  }
               }
            }
         }
      ],

      "content1a": [
         {
            "widget": "release-station/activity-grid-widget",
            "features": {
               "events": {
                  "resource": "events"
               }
            }
         }
      ],

      "footer": [
      ]
   }
}
