{
   "layout": "application",
   "extends": "auth_base",

   "areas": {
      "activities": [
         {
            "widget": "release-station/github-events-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "events": {
                  "resource": "events",
                  "onActions": [ "provide-stream" ],
                  "sources": {
                     "resource": "eventSources"
                  }
               }
            }
         },
         {
            "widget": "release-station/github-data-activity",
            "features": {
               "auth": {
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "data": {
                  "resource": "data",
                  "onActions": [ "provide-resource" ],
                  "sources": {
                     "resource": "dataSources"
                  }
               }
            }
         }
      ],

      "header": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "i18nHtmlText": {
                     "en-US": "Release<span>Station</span>"
                  }
               },
               "intro": {
                  "i18nHtmlText": {
                     "en-US": "for GitHub"
                  }
               }
            }
         }
      ],

      "navigation": [
         {
            "widget": "release-station/search-box-widget",
            "insertBeforeId": "login",
            "features": {
               "search": {
                  "resource": "searchString"
               }
            }
         }
      ],

      "headline": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "level": 2,
                  "i18nHtmlText": {
                     "en-US": "Activity Overview"
                  }
               },
               "intro": {
                  "i18nHtmlText": {
                     "en-US": "last 30 days"
                  }
               }
            }
         }
      ],

      "content": [
         {
            "widget": "release-station/activity-grid-widget",
            "features": {
               "events": {
                  "resource": "events"
               },
               "repos": {
                  "resource": "data"
               },
               "search": {
                  "resource": "searchString",
                  "fields": [
                     "repo.name",
                     "actor.login",
                     "org.login"
                  ],
                  "match": {
                     "@([\\w-]+)": [ "actor.login" ],
                     "([\\w-]+/[\\w-]+)": [ "repo.name" ]
                  }
               }
            }
         }
      ],

      "footer": [
      ]
   }
}
