{
   "areas": {
      "activities": [
         {
            "widget": "release-station/oauth-activity",
            "features": {
               "provider": {
                  "url": "https://github-live-events.herokuapp.com/auth",
                  "clientId": "91ef4687546730fb6b2d",
                  "sessionStorageId": "release-station"
               },
               "auth": {
                  "onActions": [ "authenticate" ],
                  "resource": "accessToken",
                  "flag": "authenticated"
               }
            }
         }
      ],

      "popups": [
         {
            "widget": "laxarjs/ax-popup-widget",
            "id": "authPopup",
            "features": {
               "content": {
                  "layout": "auth-popup"
               },
               "open": {
                  "onActions": [ "openPopup" ]
               },
               "close": {
                  "onActions": [ "closePopup" ]
               },
               "closeIcon": {
                  "enabled": true
               }
            }
         }
      ],

      "authPopup.header": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "level": 3,
                  "i18nHtmlText": {
                     "en_US": "Authenticate with GitHub"
                  }
               }
            }
         }
      ],

      "authPopup.content": [
         {
            "widget": "laxarjs/ax-command-bar-widget",
            "features": {
               "ok": {
                  "enabled": true,
                  "action": "authenticate"
               }
            }
         }
      ],

      "login": [
         {
            "widget": "release-station/github-login-widget",
            "features": {
               "auth": {
                  "action": "openPopup",
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "user": {
                  "resource": "user"
               }
            }
         }
      ]
   }
}
