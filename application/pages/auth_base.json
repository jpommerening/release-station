{
   "areas": {
      "activities": [
         {
            "widget": "laxarjs/ax-developer-tools-widget",
            "features": {
               "button": {
                  "enabled": false
               }
            }
         },
         {
            "widget": "release-station/oauth-activity",
            "features": {
               "provider": {
                  "url": "https://github-live-events.herokuapp.com/auth",
                  "clientId": "91ef4687546730fb6b2d",
                  "sessionStorageId": "release-station"
               },
               "auth": {
                  "onActions": [ "authenticate" ],
                  "resource": "accessToken",
                  "flag": "authenticated",
                  "drop": {
                     "onActions": [ "deauthenticate" ]
                  }
               }
            }
         }
      ],

      "popups": [
         {
            "widget": "amd:laxar-popup-widget",
            "id": "auth",
            "features": {
               "content": {
                  "layout": "popup"
               },
               "open": {
                  "onActions": [ "openAuth" ]
               },
               "close": {
                  "onActions": [ "closeAuth" ]
               },
               "closeIcon": {
                  "enabled": true
               }
            }
         },
         {
            "widget": "amd:laxar-popup-widget",
            "id": "settings",
            "features": {
               "content": {
                  "layout": "popup"
               },
               "open": {
                  "onActions": [ "openSettings" ]
               },
               "close": {
                  "onActions": [ "closeSettings" ]
               },
               "closeIcon": {
                  "enabled": true
               }
            }
         }
      ],

      "auth.header": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "level": 3,
                  "i18nHtmlText": {
                     "en-US": "Authenticate with GitHub"
                  }
               }
            }
         }
      ],

      "auth.content": [
         {
            "widget": "laxarjs/ax-command-bar-widget",
            "features": {
               "ok": {
                  "enabled": true,
                  "action": "authenticate"
               }
            }
         }
      ],

      "settings.header": [
         {
            "widget": "laxarjs/ax-headline-widget",
            "features": {
               "headline": {
                  "level": 4,
                  "i18nHtmlText": {
                     "en-US": "Settings"
                  }
               }
            }
         }
      ],

      "settings.content": [
         {
            "widget": "release-station/settings-widget",
            "features": {
               "user": {
                  "resource": "user"
               },
               "settings": {
                  "events": {
                     "resource": "eventSources"
                  },
                  "data": {
                     "resource": "dataSources"
                  }
               }
            }
         }
      ],

      "navigation": [
         {
            "widget": "release-station/navigation-widget",
            "features": {
               "navigation": {
                  "items": [
                     {
                        "place": "grid",
                        "icon": "fa-tachometer",
                        "i18nHtmlLabel": {
                           "en-US": "Grid"
                        }
                     },
                     {
                        "place": "calendar",
                        "icon": "fa-calendar",
                        "i18nHtmlLabel": {
                           "en-US": "Calendar"
                        }
                     },
                     {
                        "place": "history",
                        "icon": "fa-tags",
                        "i18nHtmlLabel": {
                           "en-US": "History"
                        }
                     }
                  ]
               }
            }
         },
         {
            "widget": "release-station/github-login-widget",
            "id": "login",
            "features": {
               "auth": {
                  "action": "authenticate",
                  "resource": "accessToken",
                  "flag": "authenticated"
               },
               "user": {
                  "resource": "user"
               },
               "menu": [
                  {
                     "action": "openSettings",
                     "i18nHtmlLabel": {
                        "en-US": "Settings"
                     }
                  },
                  {
                     "action": "deauthenticate",
                     "i18nHtmlLabel": {
                        "en-US": "Sign out"
                     }
                  }
               ]
            }
         }
      ]
   }
}
